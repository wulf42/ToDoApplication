@model ToDoApplication.Models.ShoppingProduct

<h1>Create Shopping Product</h1>

@using (Html.BeginForm("Save", "ShoppingProduct", FormMethod.Post))
{
    <input type="hidden" id="TaskToDoId" name="TaskToDoId" value="@Model.TaskToDoId" />

    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.name" />
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity:</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" value="@Model.quantity" />
    </div>
        
    <button type="submit" class="btn btn-primary">Create</button>
}
