@using ToDoApplication.ViewModels;
@model List<UserRolesViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Email Confirmed?</th>
            <th>Access Failed Count</th>
            <th>Role</th>
            <th>Is Active?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.User.UserName</td>
                <td>@user.User.Email</td>
                <td>@(user.User.EmailConfirmed ? "Yes" : "No")</td>
                <td>@user.User.AccessFailedCount</td>
                <td>@user.Role</td>
                <td>@(user.User.IsActive ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
